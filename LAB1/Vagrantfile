  config.vm.define "ansible-srv" do |srv1|
    srv1.vm.host_name = "ansible-srv"
    config.vm.box = "ubuntu/trusty64"
    config.vm.box_version = "20180201.0.1"
    srv1.vm.network "private_network",
                     ip: "10.100.0.10",
                     virtualbox__intnet: "management"
  end
