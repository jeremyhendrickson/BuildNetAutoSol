#                      virtualbox__intnet: "4-1"
#    vsrx4.vm.network "private_network",
#                     ip: "10.100.0.4",
#                     virtualbox__intnet: "management"
#  end
#  config.vm.define "srv1" do |srv1|
#    srv1.vm.host_name = "srv1"
#    config.vm.box = "robwc/minitrusty64"
#    srv1.vm.network "private_network",
